{
  "manifest_version": 2,
  "name": "Context Search Origin",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "version": "2.0.1",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "menus",
    "activeTab",
    "storage",
    "bookmarks"
  ],

  "options_ui": {
      "page": "options/options.html",
      "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["query.js"]
    }
  ],

  "icons": {
    "24": "icons/search.svg"
  },

  "applications": {
    "gecko": {
      "id": "{e040cf12-0537-4265-8ce0-ee195356ed60}",
      "strict_min_version": "57.0"
    }
  }
}
